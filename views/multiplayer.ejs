<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("temp/head", { title: "Challenge #1 | Multiplayer" }) %>
</head>
<body>
    <nav>
		<div class="logo"><a href="/">Challenge #1</a></div>

		<div class="right">
			<% if (username) { %>
                <a href="/user/<%= username %>"><%= username %></a>
                <ion-icon name="person"></ion-icon>
			<% } else { %>
                <script src="/src/lib/auth.js" authed="location.reload()"></script>
			<% } %>
		</div>
	</nav>
    
    <div class="typing">
		<textarea
			class="text"
			spellcheck="false"
			autocapitalize="off"
			autocomplete="off"
			autocorrect="off"

			data-gramm="false"
			data-gramm_editor="false"
			data-enable-grammarly="false"
		></textarea>
		
		<div class="type-text"></div>
		<div class="cursor"></div>
		<div class="blur-div fade-in">Click to Type!</div>
	</div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="./src/multi.js" type="module"></script>
</body>
</html>